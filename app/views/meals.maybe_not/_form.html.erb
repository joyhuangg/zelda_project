<% if @meal.errors.any? %>
  <% @meal.errors.full_messages.each do |msg| %>
    <%= msg %><br>
  <% end %>
<% end %>

<%= form_for @meal do |f| %>
  <%= f.label :rating %><br>
  <%= f.number_field :rating %><br>
  <%= f.label :user_id, "User" %><br>
  <%= f.collection_select :user_id, User.all, :id, :name %>
  <%= f.label :recipe_id, "Recipe" %><br>
  <%= f.collection_select :recipe_id, Recipe.all, :id, :name %>
  <%= f.submit %>
<% end %>
