<% if @ingredient.errors.any? %>
  <% @ingredient.errors.full_messages.each do |msg| %>
    <%= msg %><br>
  <% end %>
<% end %>

<%= form_for @ingredient do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :calories%><br>
  <%= f.number_field :calories %><br>
  <%= f.label :hearts %><br>
  <%= f.number_field :hearts %><br>
  <%= f.label :cooked_effect %><br>
  <%= f.text_field :cooked_effect %><br>
  <%= f.label :image_url %><br>
  <%= f.text_field :image_url %><br>
  <%= f.submit %>
<% end %>
